<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        android:layout_marginTop="280dp">

        <TextView
            android:id="@+id/cause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/smolwave"
            android:gravity="center"
            android:text="Industrial Waste"
            android:textColor="@color/turtlegreen"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/explanation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="65dp"
            android:drawableBottom="@drawable/smolwave"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="Industrial waste is defined as waste generated by manufacturing or industrial processes.The types of industrial waste generated include cafeteria garbage, dirt and gravel, masonry and concrete, scrap metals, trash, oil, solvents, chemicals, weed grass and trees, wood and scrap lumber, and similar wastes."
            android:textColor="@color/turtlelightgreen"
            android:textSize="12.5dp" />

    </androidx.cardview.widget.CardView>

</LinearLayout>
